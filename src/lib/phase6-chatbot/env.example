# Phase 6: Bambai AI Assistant Chatbot Environment Variables

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# Vector Database Configuration
# Choose one: PostgreSQL or Pinecone
POSTGRES_CONNECTION_STRING=postgresql://username:password@localhost:5432/thechesswire
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-east-1-aws
PINECONE_INDEX_NAME=thechesswire-knowledge

# ElevenLabs Voice (Optional)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM

# Security Configuration
CHATBOT_RATE_LIMIT=10
CHATBOT_RATE_LIMIT_WINDOW=60000
CHATBOT_MAX_TOKENS=4000
CHATBOT_TEMPERATURE=0.7

# CORS Configuration
ALLOWED_ORIGINS=https://thechesswire.news,https://www.thechesswire.news

# Database Configuration
CHATBOT_DB_HOST=localhost
CHATBOT_DB_PORT=5432
CHATBOT_DB_NAME=thechesswire
CHATBOT_DB_USER=username
CHATBOT_DB_PASSWORD=password

# Logging Configuration
CHATBOT_LOG_LEVEL=info
CHATBOT_LOG_FILE=./logs/chatbot.log

# Feature Flags
ENABLE_VOICE_MODE=false
ENABLE_VECTOR_SEARCH=true
ENABLE_MEMORY=true
ENABLE_MODERATION=true

# Vector Database Refresh
VECTOR_DB_REFRESH_INTERVAL=86400000 