# Phase 5: Bambai AI Autonomous Publishing Pipeline
# TheChessWire.news - Environment Configuration

# =============================================================================
# ELEVENLABS CONFIGURATION
# =============================================================================
# ElevenLabs API key for voice synthesis
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# =============================================================================
# HEYGEN CONFIGURATION
# =============================================================================
# HeyGen API key for video rendering
HEYGEN_API_KEY=your_heygen_api_key_here
# HeyGen avatar ID for Bambai AI
HEYGEN_AVATAR_ID=bambai-ai-avatar
# HeyGen background ID for chess-themed backgrounds
HEYGEN_BACKGROUND_ID=chess-background

# =============================================================================
# YOUTUBE API CONFIGURATION
# =============================================================================
# YouTube OAuth2 client ID
YOUTUBE_CLIENT_ID=your_youtube_client_id_here
# YouTube OAuth2 client secret
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret_here
# YouTube OAuth2 refresh token
YOUTUBE_REFRESH_TOKEN=your_youtube_refresh_token_here

# =============================================================================
# INSTAGRAM API CONFIGURATION
# =============================================================================
# Instagram Graph API access token
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token_here
# Instagram user ID
INSTAGRAM_USER_ID=your_instagram_user_id_here

# =============================================================================
# TWITTER/X API CONFIGURATION
# =============================================================================
# Twitter API key
TWITTER_API_KEY=your_twitter_api_key_here
# Twitter API secret
TWITTER_API_SECRET=your_twitter_api_secret_here
# Twitter access token
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
# Twitter access token secret
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret_here

# =============================================================================
# REDDIT API CONFIGURATION
# =============================================================================
# Reddit client ID
REDDIT_CLIENT_ID=your_reddit_client_id_here
# Reddit client secret
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
# Reddit refresh token
REDDIT_REFRESH_TOKEN=your_reddit_refresh_token_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL database URL
DATABASE_URL=postgresql://username:password@host:port/database

# =============================================================================
# PIPELINE CONFIGURATION
# =============================================================================
# Maximum stories to process per pipeline run
MAX_STORIES_PER_RUN=5
# Minimum relevance score for stories (0-100)
MIN_RELEVANCE_SCORE=70
# Maximum processing time per story (milliseconds)
MAX_PROCESSING_TIME=300000
# Number of retry attempts for failed operations
RETRY_ATTEMPTS=3
# Delay between retries (milliseconds)
RETRY_DELAY=5000
# Rate limiting delay between API calls (milliseconds)
RATE_LIMIT_DELAY=1000
# Enable automatic publishing to social platforms
ENABLE_AUTO_PUBLISH=true
# Comma-separated list of platforms to publish to
PUBLISH_PLATFORMS=youtube,instagram,twitter

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Node environment
NODE_ENV=production
# Application port
PORT=3000
# Log level
LOG_LEVEL=info

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT secret for authentication
JWT_SECRET=your_jwt_secret_here
# Session secret
SESSION_SECRET=your_session_secret_here

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
# Sentry DSN for error tracking
SENTRY_DSN=your_sentry_dsn_here
# Analytics tracking ID
ANALYTICS_ID=your_analytics_id_here

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
# Redis URL for caching
REDIS_URL=redis://localhost:6379
# Cache TTL in seconds
CACHE_TTL=3600

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================
# AWS S3 bucket for file storage
S3_BUCKET=thechesswire-storage
# AWS S3 region
S3_REGION=us-east-1
# AWS access key ID
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
# AWS secret access key
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================
# Email service configuration
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_password_here
# Slack webhook URL for notifications
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Enable debug mode
DEBUG=false
# Enable verbose logging
VERBOSE=false
# Test mode (disable actual publishing)
TEST_MODE=false 